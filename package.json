{
  "name": "honotreez",
  "description": "honotreez is boilerplate for backend development with Hono, Drizzle ORM, and Better Auth.",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun --bun ./src/db/seeders/seed.ts",
    "db:reset": "bun --bun ./src/db/seeders/reset.ts",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "better-auth": "^1.4.18",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "nanoid": "^5.1.6",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0"
  },
  "eslintConfig": {
    "extends": "plugin:drizzle/recommended"
  }
}
