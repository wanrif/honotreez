{
  "name": "honotreez",
  "description": "Boilerplate Hono",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun --bun ./src/db/seeders/seed.ts",
    "db:reset": "bun --bun ./src/db/seeders/reset.ts",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "better-auth": "^1.3.34",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6"
  },
  "eslintConfig": {
    "extends": "plugin:drizzle/recommended"
  }
}
